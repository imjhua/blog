import "./styles.css";

let currentPageId = 1;

/*
1. 섹션들(5개?)의 height를 scrolle * 5
2. 현재 pageOffset이 어떤 영역에 위치 하는지에 따라
섹션을 보인다?
3. 섹션중에서 문구를 보인다
*/
const pageIds = [0, 1, 2, 3, 4];
for (let id of pageIds) {
  document.querySelector(`.page-${id}`).style.height = window.innerHeight * 5;
}

window.addEventListener("scroll", function() {
  console.log(window.pageYOffset / pageIds.length);
